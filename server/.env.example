# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
MONGO_URI=mongodb://localhost:27017/lapor
# For production, use MongoDB Atlas or other cloud database:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/lapor

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production_minimum_32_characters
JWT_EXPIRES_IN=7d

# CORS Configuration
CLIENT_URL=http://localhost:5173
# For production, set to your domain:
# CLIENT_URL=https://yourdomain.com

# Railway/Deployment URLs (if using Railway)
# RAILWAY_STATIC_URL=https://your-app.up.railway.app

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880

# Default Admin Account (Optional)
DEFAULT_ADMIN_EMAIL=admin@lapor.com
DEFAULT_ADMIN_PASSWORD=admin123

# Security Headers
HELMET_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100